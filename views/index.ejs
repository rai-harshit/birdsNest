						</fb:login-button>

<!-- 						<div class="fb-login-button" data-width="100" data-max-rows="1" data-size="medium" data-button-type="login_with" data-show-faces="false" data-auto-logout-link="true" data-use-continue-as="false"></div> -->

					</div>
					<!--<div>
							<a href="#" onclick="FB.logout();">Sign Out</a>
					</div> -->
					<!-- <div>
					<a href='signup.html'><img src='images/fb.png' id='sm_image' onclick='fb_login();'></a>
					</div> -->
				</div>
				<div>
						<a href="#" onclick="signOut();">Sign Out</a>
				</div>
			</div>
		</div>
	</div>
</body>
</html>